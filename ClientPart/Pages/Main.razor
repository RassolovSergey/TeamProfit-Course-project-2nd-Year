@page "/main"

<!-- Контейнер на весь экран, центрирует главный блок -->
<div class="main-container">
    <div class="main-box">

        <!-- Левый столбец — 30% ширины -->
        <div class="main-col-left">
            <div class="side-window">
                <!-- 1) Верхняя зона: 20% -->
                <div class="side-top">
                    <!-- сюда можно поместить заголовок или навигацию -->
                </div>
                <!-- 2) Нижняя зона: 80% -->
                <div class="side-bottom">
                    <div class="inner-light-window">
                        <!-- содержимое нижнего окна -->
                    </div>
                </div>
            </div>
        </div>

        <!-- Правый столбец — 70% ширины -->
        <div class="main-col-right">
            <!-- сюда основной контент приложения -->
        </div>

    </div>
</div>
